<div class= container>
    <form action="<%= action%>" method="post">
        <div class="form-group">
            <label >Full Name</label>
            <input type="text" class="form-control" name="name" value="<%= obj.name %> ">
        </div>
        <div class="form-group">
            <label >User Name</label>
            <input type="text" class="form-control" name="userName" value="<%= obj.userName %> ">
        </div>
        <div class="form-group">
            <label >Password</label>
            <input type="password" class="form-control" id='p' name="password" value="<%=obj.password%>">
        </div>
        <div class="form-group">
            <label > Repeat Password</label>
            <input type="password" class="form-control" id="repeatP">
            <span id="msg"></span>
        </div>
        <div class="form-group">
            <label >Địa chỉ </label>
            <input type="text" class="form-control" name="location" value="<%= obj.location %>" >
        </div>
        <div class="form-group">
            <label>Tuổi </label>
            <input type="number" class="form-control" name="age" value="<%= obj.age %>" >
        </div>
        <div class="form-group">
            <label for="">Số điện thoại</label>
            <input type="tel" class="form-control" name="phone" value="<%= obj.phone %>">
        </div>
        <div class="form-group">
            <label >Email </label>
            <input type="email" class="form-control" name="email" value="<%= obj.email %> ">
        </div>

        <div class="form-group">
            <label >Giới thiệu bản thân</label>
            <textarea class="form-control"  rows="3" name="content" value="<%= obj.content %>"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit">
            <input type="reset" value="Reset">
        </div>
    </form>
</div>
