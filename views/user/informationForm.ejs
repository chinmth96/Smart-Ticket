<script>
    function checkPassword(){
        var pw= document.getElementById('p');
        var msg= document.getElementById('msg')
        if(this.value !== pw.value){
            msg.textContent='Your password is not match ';
        }else{
            msg.textContent='';
        }
    }
    var check=document.getElementById('repeatP');
    check.onblur= checkPassword;

</script>
